import java.util.Scanner;

public class Main {
    public static void main(String[] args) {

        Scanner sc = new Scanner(System.in);
        int numero;

        do {
            System.out.print("Escreva um numero positivo: ");
             numero = sc.nextInt();

        } while (numero <= 0);

        System.out.println("numero valido digitado: " + numero);

        sc.close();
    }
}
